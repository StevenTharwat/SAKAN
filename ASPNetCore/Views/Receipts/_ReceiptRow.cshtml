@model CreateReceiptViewModel

<tr>
    <td>
        <select asp-for="Rows[0].Type" asp-items="Html.GetEnumSelectList<ReceiptType>()" class="form-select">
            <option value="">-- اختر النوع --</option>
        </select>
        <span asp-validation-for="Rows[0].Type" class="text-danger"></span>
    </td>
    <td>
        <input asp-for="Rows[0].MoneyAmount" class="form-control" placeholder="0"/>
        <span asp-validation-for="Rows[0].MoneyAmount" class="text-danger"></span>
    </td>
    <td>
        <input asp-for="Rows[0].Description" class="form-control" />
        <span asp-validation-for="Rows[0].Description" class="text-danger"></span>
    </td>
    <td class="text-center">
        <button type="button" class="btn btn-sm btn-outline-danger remove-row">
            <i class="fas fa-trash"></i>
        </button>
    </td>
</tr>