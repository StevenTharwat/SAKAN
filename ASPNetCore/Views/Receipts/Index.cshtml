@model IEnumerable<DAL.Domain.Receipt>

@{
    ViewData["Title"] = "سجل الحركات النقدية";
    var col = 3;
    if (ViewBag?.AccountId != null)
    {
        col = 4;
        Layout = null;
    }
}

<div class="container-fluid py-4">
    <div class="row mb-4">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <div class="d-flex justify-content-between align-items-center">
                        <h4 class="mb-0">سجل الحركات النقدية</h4>
                        <a asp-controller="Receipts" asp-action="Create" asp-route-AccountId="@ViewBag?.AccountId" class="btn btn-light">
                            <i class="fas fa-plus me-1"></i> إضافة حركة جديدة
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    <!-- Filter Section -->
                    <div class="row mb-3">
                        @if (ViewBag?.AccountId == null)
                        {
                            <div class="col-md-@col">
                                <div class="form-group">
                                    <label class="form-label">نوع الحساب</label>
                                    <select id="accountTypeFilter" class="form-select" asp-items="Html.GetEnumSelectList<AccountType>()">
                                        <option value="">الكل</option>
                                    </select>
                                </div>
                            </div>
                        }
                        <div class="col-md-@col">
                            <div class="form-group">
                                <label class="form-label">نوع الحركة</label>
                                <select id="receiptTypeFilter" class="form-select" asp-items="Html.GetEnumSelectList<ReceiptType>()">
                                    <option value="">الكل</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-md-@col">
                            <div class="form-group">
                                <label class="form-label">من تاريخ</label>
                                <input type="date" id="fromDate" class="form-control" />
                            </div>
                        </div>
                        <div class="col-md-@col">
                            <div class="form-group">
                                <label class="form-label">إلى تاريخ</label>
                                <input type="date" id="toDate" class="form-control" />
                            </div>
                        </div>
                    </div>

                    <!-- Receipts Table -->
                    <div class="table-responsive">
                        <table class="table table-hover table-striped" id="receiptsTable">
                            <thead class="table-dark">
                                <tr>
                                    <th>الحساب</th>
                                    <th>نوع الحركة</th>
                                    <th>المبلغ</th>
                                    <th>التاريخ</th>
                                    <th>الوصف</th>
                                    <th>إجراءات</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td hidden>@((int)item.Account.Type)</td>
                                        <td>
                                            <a class="accountDetails" asp-controller="Accounts" asp-action="Details" asp-route-id="@item.Account?.Id">
                                                @item.Account?.Name
                                            </a>
                                        </td>

                                        <td hidden>@((int)item.Type)</td>
                                        <td>
                                            @if (item.Type == ReceiptType.CashReceipt)
                                            {
                                                <span class="badge bg-success">@item.Type.GetDisplayName()</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-danger">@item.Type.GetDisplayName()</span>
                                            }
                                        </td>
                                        <td>@item.MoneyAmount.ToString("N2")</td>
                                        <td>@item.CreatedAt.ToString("yyyy/MM/dd")</td>
                                        <td>
                                            @if (!string.IsNullOrEmpty(item.Description))
                                            {
                                                @(item.Description.Length > 10 ? item.Description.Substring(0, 10) + "..." : item.Description)
                                            }
                                        </td>
                                        <td>
                                            <div class="d-flex justify-content-center gap-2">
                                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">
                                                    <i class="fas fa-eye"></i>
                                                </a>
                                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">
                                                    <i class="fas fa-edit"></i>
                                                </a>
                                                <form asp-action="Delete" asp-route-id="@item.Id" method="post" class="d-inline">
                                                    <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('هل أنت متأكد من حذف هذه الحركة؟');">
                                                        <i class="fas fa-trash"></i>
                                                    </button>
                                                </form>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
                <div class="card-footer">
                    <div class="d-flex justify-content-between align-items-center">
                        <div class="text-muted">
                            عرض <span id="showingCount">@Model.Count()</span> من <span id="totalCount">@Model.Count()</span> حركة
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Filter functionality
            $('#receiptTypeFilter, #accountTypeFilter, #fromDate, #toDate').change(function() {
                filterReceipts();
            });

            function filterReceipts() {
                const receiptTypeFilter = $('#receiptTypeFilter').val().toLowerCase();
                const accountTypeFilter = $('#accountTypeFilter').val().toLowerCase();
                const fromDate = $('#fromDate').val();
                const toDate = $('#toDate').val();

                $('#receiptsTable tbody tr').each(function() {
                    const row = $(this);
                    const accountRowType = row.find('td:nth-child(1)').text().trim().toLowerCase();
                    const receiptRowType = row.find('td:nth-child(3)').text().trim().toLowerCase();
                    const rowDate = row.find('td:nth-child(6)').text().trim();

                    debugger
                    let typeMatch = 
                        (accountTypeFilter === accountRowType && receiptRowType === receiptTypeFilter) ||
                        (accountTypeFilter === '' && receiptRowType === receiptTypeFilter) ||
                        (accountTypeFilter === accountRowType && receiptTypeFilter === '') ||
                        (accountTypeFilter === '' && receiptTypeFilter === '');

                    let dateMatch = true;
                    if (fromDate) {
                        const fromDateObj = new Date(fromDate);
                        const rowDateObj = new Date(rowDate.replace(/\//g, '-'));
                        dateMatch = dateMatch && rowDateObj >= fromDateObj;
                    }
                    if (toDate) {
                        const toDateObj = new Date(toDate);
                        const rowDateObj = new Date(rowDate.replace(/\//g, '-'));
                        dateMatch = dateMatch && rowDateObj <= toDateObj;
                    }

                    if (typeMatch && dateMatch) {
                        row.show();
                    } else {
                        row.hide();
                    }
                });

                // Update showing count
                const showing = $('#receiptsTable tbody tr:visible').length;
                $('#showingCount').text(showing);
            }

            // Initialize date inputs with default range (last month)
            const today = new Date();
            const lastMonth = new Date();
            lastMonth.setMonth(today.getMonth() - 1);

            $('#fromDate').val(lastMonth.toISOString().split('T')[0]);
            $('#toDate').val(today.toISOString().split('T')[0]);
        });
    </script>
}


<style>
    body {
        font-family: 'Cairo', sans-serif;
        background-color: #f8f9fa;
    }

    .accountDetails{
        text-decoration:none;
    }

    .card {
        border-radius: 10px;
        overflow: hidden;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        border: none;
    }

    .card-header {
        border-bottom: none;
        padding: 1.25rem 1.5rem;
    }

    .table th {
        font-weight: 700;
        text-transform: uppercase;
        font-size: 0.8rem;
        letter-spacing: 0.5px;
    }

    .badge {
        font-weight: 500;
        padding: 0.35em 0.65em;
        font-size: 0.75em;
    }

    .btn-group .btn {
        margin-left: 5px;
    }

    .form-control, .form-select {
        border-radius: 5px;
        padding: 0.5rem 0.75rem;
    }

    .pagination .page-item.active .page-link {
        background-color: #0d6efd;
        border-color: #0d6efd;
    }

    .pagination .page-link {
        color: #0d6efd;
    }

    #receiptsTable{
        text-align-last:center;
    }
</style>