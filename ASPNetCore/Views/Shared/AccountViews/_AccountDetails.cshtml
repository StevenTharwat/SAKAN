@model AccountViewModel
<dl class="row">
    <dt class="col-sm-2" asp-for="Name"></dt>
    <dd class="col-sm-10">@Model?.Name</dd>

    <dt class="col-sm-2" asp-for="SerialNumber"></dt>
    <dd class="col-sm-10">@Model?.SerialNumber</dd>

    @if (Model?.Type == AccountType.Department)
    {
        <dt class="col-sm-2" asp-for="NumberOfPeople"></dt>
        <dd class="col-sm-10">@Model?.NumberOfPeople</dd>
    }
    <dt class="col-sm-2" asp-for="Address"></dt>
    <dd class="col-sm-10">@Model?.Address</dd>

    <dt class="col-sm-2" asp-for="Description"></dt>
    <dd class="col-sm-10">@Model?.Description</dd>

    <dt class="col-sm-2" asp-for="AdditionalInfo"></dt>
    <dd class="col-sm-10">@Model?.AdditionalInfo</dd>

    <dt class="col-sm-2" asp-for="CreatedAt"></dt>
    <dd class="col-sm-10">@Model?.CreatedAt.ToString("g")</dd>

    <dt class="col-sm-2" asp-for="Credit"></dt>
    <dd class="col-sm-10">@Model?.Credit.ToString("C")</dd>

    <dt class="col-sm-2" asp-for="Debit"></dt>
    <dd class="col-sm-10">@Model?.Debit.ToString("C")</dd>
</dl>