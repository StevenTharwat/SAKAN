@model DAL.Domain.Account

@{
    ViewData["Title"] = "حذف الحساب";
}

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold text-danger">
                <i class="fas fa-exclamation-triangle me-2"></i>حذف الحساب
            </h2>
            <p class="text-muted mb-0">تأكيد عملية حذف الحساب من النظام</p>
        </div>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-right me-2"></i>العودة للقائمة
        </a>
    </div>

    <div class="card shadow-sm border-danger">
        <div class="card-header bg-danger text-white py-3">
            <h5 class="card-title mb-0">
                <i class="fas fa-trash-alt me-2"></i>تحذير: هذه العملية لا يمكن التراجع عنها
            </h5>
        </div>
        <div class="card-body">
            <div class="alert alert-danger" role="alert">
                <h5 class="alert-heading">
                    <i class="fas fa-exclamation-circle me-2"></i>هل أنت متأكد من رغبتك في حذف هذا الحساب؟
                </h5>
                <p class="mb-0">سيتم حذف جميع البيانات المرتبطة بهذا الحساب بشكل دائم ولا يمكن استرجاعها.</p>
            </div>

            <div class="account-details">
                <div class="row mb-3">
                    <div class="col-md-4 detail-item">
                        <h6>@Html.DisplayNameFor(model => model.SerialNumber)</h6>
                        <p>@Html.DisplayFor(model => model.SerialNumber)</p>
                    </div>
                    <div class="col-md-4 detail-item">
                        <h6>@Html.DisplayNameFor(model => model.Name)</h6>
                        <p class="fw-bold">@Html.DisplayFor(model => model.Name)</p>
                    </div>
                    <div class="col-md-4 detail-item">
                        <h6>@Html.DisplayNameFor(model => model.CreatedAt)</h6>
                        <p>@Model?.CreatedAt.ToString("yyyy/MM/dd")</p>
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-12 detail-item">
                        <h6>@Html.DisplayNameFor(model => model.Address)</h6>
                        <p>@Html.DisplayFor(model => model.Address)</p>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6 detail-item">
                        <h6>@Html.DisplayNameFor(model => model.Description)</h6>
                        <p>@Html.DisplayFor(model => model.Description)</p>
                    </div>
                    <div class="col-md-6 detail-item">
                        <h6>@Html.DisplayNameFor(model => model.AdditionalInfo)</h6>
                        <p>@Html.DisplayFor(model => model.AdditionalInfo)</p>
                    </div>
                </div>
            </div>

            <form asp-action="Delete" class="mt-4 pt-3 border-top">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-danger px-4 me-2">
                    <i class="fas fa-trash-alt me-2"></i>نعم، احذف الحساب
                </button>
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="fas fa-times me-2"></i>إلغاء
                </a>
            </form>
        </div>
    </div>
</div>


    <style>
        /* Delete Page Specific Styling */
        .card.border-danger {
            border: 1px solid var(--danger-color);
        }

        .alert-danger {
            background-color: rgba(231, 76, 60, 0.1);
            border-left: 4px solid var(--danger-color);
        }

        /* Details Styling */
        .account-details {
            padding: 1rem;
            background-color: #f8f9fa;
            border-radius: 8px;
        }

        .detail-item {
            margin-bottom: 1.5rem;
        }

            .detail-item h6 {
                color: var(--secondary-color);
                font-weight: 600;
                margin-bottom: 0.5rem;
                font-size: 0.9rem;
            }

            .detail-item p {
                padding: 0.75rem 1rem;
                border-radius: 6px;
                background-color: white;
                border: 1px solid #eee;
                margin-bottom: 0;
            }

        /* Button Styling */
        .btn-danger {
            background-color: var(--danger-color);
            border-color: var(--danger-color);
            padding: 0.625rem 1.5rem;
        }

            .btn-danger:hover {
                background-color: #c0392b;
                border-color: #c0392b;
                transform: translateY(-2px);
            }

        /* Responsive Adjustments */
        @@media (max-width: 768px) {
            .d-flex.justify-content-between {
                flex-direction: column;
                gap: 1rem;
            }

            .btn {
                width: 100%;
                margin-bottom: 0.5rem;
            }
        }
    </style>
