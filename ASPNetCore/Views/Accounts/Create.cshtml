@model Account

@{
    string Discriminator = ArabicWords.AccountDiscriminator;
    string DiscriminatorAl = ArabicWords.AccountDiscriminatorAl;
    string DiscriminatorPlural = ArabicWords.AccountDiscriminatorPlural;
    string DiscriminatorPluralAl = ArabicWords.AccountDiscriminatorPluralAl;
    ViewData["Title"] = $"إنشاء {Discriminator}";
}

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold text-primary">إنشاء @Discriminator </h2>
            <p class="text-muted mb-0">أدخل معلومات @DiscriminatorAl الأساسية</p>
        </div>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-right me-2"></i>العودة للقائمة
        </a>
    </div>

    <div class="card shadow-sm">
        <div class="card-header bg-light py-3">
            <h5 class="card-title mb-0 text-secondary">
                <i class="fas fa-info-circle me-2"></i>معلومات @DiscriminatorAl
            </h5>
        </div>
        <div class="card-body">

        <form asp-action="Create">
            <partial name="_AccountEditPartial" model="@Model" />
        </form>

        </div>
    </div>
</div>





@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <partial name="_SharedEditScripts" />
}